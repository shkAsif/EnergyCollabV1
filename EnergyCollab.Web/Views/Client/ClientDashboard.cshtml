<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .contentadd {
            display: none;
        }

        section.main {
            margin-top: 80px !important;
        }

        .navbar {
            margin-top: 0px;
        }

        .head-btm {
            display: none;
        }

        .tile {
            border: 1px solid #E3E3E3;
            cursor: pointer;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 4px;
            color: #000;
        }

        .img-thumbnail {
            padding: 2px;
            line-height: 1.42857143;
            background-color: #ffffff;
            /* border: 1px solid #ecf0f1; */
            /* border-radius: 4px; */
            -webkit-transition: all .2s ease-in-out;
            -o-transition: all .2s ease-in-out;
            transition: all .2s ease-in-out;
            display: inline-block;
            max-width: 100%;
            height: 32px;
        }

        table.table-responsive {
            width: 100%;
            display: block;
            overflow-y: scroll;
            height: 477px;
        }


        table-bordered > thead > tr > th,
        .table-bordered > thead > tr > th,
        table-bordered > tbody > tr > th,
        .table-bordered > tbody > tr > th,
        table-bordered > tfoot > tr > th,
        .table-bordered > tfoot > tr > th,
        table-bordered > thead > tr > td,
        .table-bordered > thead > tr > td,
        table-bordered > tbody > tr > td,
        .table-bordered > tbody > tr > td,
        table-bordered > tfoot > tr > td,
        .table-bordered > tfoot > tr > td {
            border: 1px solid #ecf0f1;
            width: 10%;
        }


        .table > caption + thead > tr:first-child > th,
        .table > colgroup + thead > tr:first-child > th,
        .table > thead:first-child > tr:first-child > th,
        .table > caption + thead > tr:first-child > td,
        .table > colgroup + thead > tr:first-child > td,
        .table > thead:first-child > tr:first-child > td {
            border-top: 0;
            background-color: black;
            font-size: 13px;
            color: #fff;
            text-align: center;
        }
    </style>
</head>

<body>

    @{
        var Companies = ViewData["Companies"];
        var UserGroups = ViewData["UserGroupsView"];
        var SecurityRights = ViewData["SecurityRights"];
        var Templates = ViewData["Templates"];
        var CandidateSubscribers = ViewData["CandidateSubscribers"];
    }

    <section id="content" class="main container"
             data-bind="router: { transition: 'entrance', cacheViews: false }, css: { 'loading-background' : state.isLoading}">
        <div class="durandal-wrapper" data-view="views/admin" data-active-view="true">
            <section class="page-section">
                <div class="row">
                    <div class="col-md-3 col-xs-12 right-left-padding-remover">

                        <ul class="list-group">
                            <li class="list-group-item list-group-item-active" onclick="getComapnies()">

                                <span class="badge bg-success">16</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-building"></i>
                                    <span data-bind="text: name">Companies</span>
                                </p>
                            </li>

                            <li class="list-group-item" onclick="getUserGroups()">

                                <span class="badge" data-bind="text: items().length">54</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-group"></i>
                                    <span data-bind="text: name">User Groups</span>
                                </p>
                            </li>

                            <li class="list-group-item" onclick="getSecurityRights()">

                                <span class="badge" data-bind="text: items().length">53</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-user-secret"></i>
                                    <span data-bind="text: name">Security Rights</span>
                                </p>
                            </li>

                            <li class="list-group-item" onclick="getTemplates()">

                                <span class="badge" data-bind="text: items().length">16</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-pencil-square"></i>
                                    <span data-bind="text: name">Templates</span>
                                </p>
                            </li>

                            <li class="list-group-item" onclick="getCandidateSubscribers()">

                                <span class="badge" data-bind="text: items().length">559</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-th-list"></i>
                                    <span data-bind="text: name">Update Candidate Subscribers</span>
                                </p>
                            </li>

                            <li class="list-group-item"
                                data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                href="#">

                                <span class="badge" data-bind="text: items().length">15</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-list"></i>
                                    <span data-bind="text: name">Update Client Subscribers</span>
                                </p>
                            </li>

                            <li class="list-group-item"
                                data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                href="#">

                                <span class="badge" data-bind="text: items().length">17</span>

                                <p class="list-group-item-heading">
                                    <i data-bind="css: icon" class="fa fa-file-text"></i>
                                    <span data-bind="text: name">Contents</span>
                                </p>
                            </li>

                            <li class="list-group-item"
                                data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                href="#">

                                <span class="badge" data-bind="text: items().length">0</span>

                                <a class="list-group-item"
                                   data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                   href="#">

                                    <span class="badge" data-bind="text: items().length">0</span>

                                    <p class="list-group-item-heading">
                                        <i data-bind="css: icon" class="fa fa-image"></i>
                                        <span data-bind="text: name">Live Banners</span>
                                    </p>
                                </a>

                                <a class="list-group-item"
                                   data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                   href="#">

                                    <span class="badge" data-bind="text: items().length">1</span>

                                    <p class="list-group-item-heading">
                                        <i data-bind="css: icon" class="fa fa-archive"></i>
                                        <span data-bind="text: name">Archived Banners</span>
                                    </p>
                                </a>

                                <a class="list-group-item"
                                   data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                   href="#">

                                    <span class="badge" data-bind="text: items().length">3</span>

                                    <p class="list-group-item-heading">
                                        <i data-bind="css: icon" class="fa fa-file"></i>
                                        <span data-bind="text: name">User Manual and Guides</span>
                                    </p>
                                </a>

                                <a class="list-group-item"
                                   data-bind="click: $parent.setSelectedView, css: {'list-group-item-active': $parent.selectedView().id == id}"
                                   href="#">

                                    <span class="badge" data-bind="text: items().length">2</span>

                                    <p class="list-group-item-heading">
                                        <i data-bind="css: icon" class="fa fa-file"></i>
                                        <span data-bind="text: name">Add/Edit Documents</span>
                                    </p>
                                </a>
                            </li>
                            <!-- /ko -->
                        </ul>
                    </div>

                    <div id="content-view" class="col-md-9 col-xs-12" data-bind="compose: selectedView().id">
                        <div class="durandal-wrapper" data-view="views/adminCompanies" data-active-view="true">
                            <div class="row title-row">

                                <div id="partialListView" class="col-md-12">
                                    @{
                                        if (Companies != null)
                                        {
                                            @await Html.PartialAsync("~/Views/Shared/_ClientDetailTabListView.cshtml", Companies)
                                        }
                                        else if (UserGroups != null)
                                        {
                                            @await Html.PartialAsync("~/Views/Shared/_PartialUserGroups.cshtml", UserGroups)
                                        }
                                        else if (SecurityRights != null)
                                        {
                                            @await Html.PartialAsync("~/Views/Shared/_PartialSecurityRights.cshtml", SecurityRights)
                                        }
                                        else if (Templates != null)
                                        {
                                            @await Html.PartialAsync("~/Views/Shared/_PartialTemplates.cshtml", Templates)
                                        }
                                        else if (CandidateSubscribers != null)
                                        {
                                            @await Html.PartialAsync("~/Views/Shared/_PartialCandidteSubscriber.cshtml", CandidateSubscribers)
                                        }
                                        @await Html.PartialAsync("~/Views/Shared/_ClientDetailTabListView.cshtml", Companies)
                                    }
                                </div>

                            </div>
                            <div data-bind="compose: 'adminEditCompany.html', visible: isEditing()"
                                 style="display: none;">
                                <div class="composer-plate" data-bind="visible: isEditing"
                                     data-view="views/adminEditCompany" data-active-view="true" style="display: none;">
                                    <div class="panel panel-default">

                                        <div class="panel-heading">
                                            <h3 class="panel-title" data-bind="text: $root.loc.stringEditCompany">
                                                Edit
                                                Company
                                            </h3>
                                        </div>

                                        <div class="panel-body">

                                            <ul class="nav nav-pills">
                                                <li class="active">
                                                    <a href="#editCompanyProfile" data-toggle="tab">
                                                        <span class="fa fa-edit" aria-hidden="true"></span>
                                                        <span class="tab-header-label"
                                                              data-bind="text: $root.loc.stringCompanyProfile">
                                                            Company
                                                            Profile
                                                        </span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#invitation" data-toggle="tab">
                                                        <span class="fa fa-share-alt" aria-hidden="true"></span>
                                                        <span class="tab-header-label"
                                                              data-bind="text: $root.loc.stringInvitation">Invitation</span>
                                                    </a>
                                                </li>
                                                <li data-bind="visible: state.isAdministrator()">
                                                    <a href="#accessRequests" data-toggle="tab">
                                                        <span class="fa fa-users" aria-hidden="true"></span>
                                                        <span class="tab-header-label"
                                                              data-bind="text: $root.loc.stringUsers">Users</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#communityNetwork" data-toggle="tab">
                                                        <span class="fa fa-comments-o" aria-hidden="true"></span>
                                                        <span class="tab-header-label"
                                                              data-bind="text: $root.loc.stringCommunityNetwork">
                                                            Community
                                                            Network
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div id="editCompanyProfile" class="tab-pane fade in active">
                                                    <form class="form form-admin" data-bind="with: selectedItem"></form>

                                                </div>

                                                <!-- ko with : selectedItem--><!-- /ko -->
                                            </div>
                                        </div>

                                    </div>

                                    <div class="tile row">
                                        <div class="admin-button-panel text-right">
                                            <button class="btn btn-success"
                                                    data-bind="command: saveCommand, text: $root.loc.buttonSave">
                                                Save
                                            </button>
                                            <button class="btn btn-default"
                                                    data-bind="click: cancelEdit, text: $root.loc.buttonCancel">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        @*  <div id="partialListView" class="col-md-6">
        @{
        if (resultList != null)
        @await Html.PartialAsync("~/Views/Shared/_ClientDetailTabListView.cshtml",resultList)
        }
        </div> *@
    </section>
</body>

</html>