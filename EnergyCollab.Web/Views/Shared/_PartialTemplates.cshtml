@{
    ViewData["IncludeHeader"] = false;
}

<div id="content-view" class="col-md-9 col-xs-12" data-bind="compose: selectedView().id">
    <div class="durandal-wrapper" data-view="views/adminCompanies" data-active-view="true">
        <div class="row title-row">
            <div class="pull-right">
                <!-- For now the only way of adding a new company is via sginup form-->
                <!--<button class="btn btn-success btn-sm"-->
                <!--data-bind="click: newItem,  visible: !isEditing()"><i class="fa fa-plus"></i></button>-->
            </div>
            @*<div class="pull-left">
            <h3 data-bind="text: $root.loc.stringCompanies">User Groups</h3>
            </div>*@
            <div class="row title-row">
                <div class="pull-right">
                    <button class="btn btn-success btn-sm" data-bind="click: newItem, visible: !isEditing()"><i class="fa fa-plus"></i></button>
                </div>
                <div class="pull-left">
                    <h3 data-bind="text: $root.loc.stringUserGroups">Templates</h3>
                </div>
            </div>
            <!-- ko with: company -->
            <div>
                @{
                    @for (var i = 0; i <= 8; i++)
                    {
                        <div class="col-md-11 mt-4">
                            <div class="tile row" data-bind="click: $root.setSelectedItem, css: { selected: $data === $root.selectedItem() }">

                                <!-- Standard update, edit and delete options -->
                                <div data-bind="compose: 'adminTileButtonPanel.html'"><div class="tile-button-panel" data-bind="if: $root.selectedItem() &amp;&amp; $data === $root.selectedItem()" data-view="views/adminTileButtonPanel" data-active-view="true" style=""></div></div>

                                <span class="title" data-bind="text: $root.getTemplateType(typeCode())">New Application Received</span>


                                <div class="tile-confirmation make-danger" data-bind="visible: $data === $root.selectedItem() &amp;&amp; $root.isDeleting()" style="display: none;">
                                    <i class="fa fa-trash-o fa-2x"></i>
                                    <span data-bind="text: $root.loc.textDeleteConfirmationMessage">Are you sure you want to delete this item?</span>
                                </div>

                                <div class="tile-body row" data-bind="visible:  $data !== $root.selectedItem() || !$root.isDeleting()">

                                    <div class="col-md-2">
                                        <span class="tile-label"><i class="fa fa-language"></i></span>
                                        <span data-bind="text: $root.getLanguage(languageCode())">English</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="tile-label"><i class="fa fa-html5"></i></span>
                                        <code data-bind="text: templateId">hr_notification_en</code>
                                    </div>
                                    <div class="col-md-6">
                                        <span class="tile-label"><i class="fa fa-file-text"></i></span>
                                        <sapn data-bind="text: subject">New Application Received</sapn>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>