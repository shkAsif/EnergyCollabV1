
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="bower_components/font-awesome/css/font-awesome.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Document</title>
</head>

<div id="content-view" class="col-md-9 col-xs-12" data-bind="compose: selectedView().id">
    <div class="durandal-wrapper" data-view="views/adminCompanies" data-active-view="true">
        <div class="row title-row">
            <div class="pull-right">
                <!-- For now the only way of adding a new company is via sginup form-->
                <!--<button class="btn btn-success btn-sm"-->
                <!--data-bind="click: newItem,  visible: !isEditing()"><i class="fa fa-plus"></i></button>-->
            </div>
            @*<div class="pull-left">
            <h3 data-bind="text: $root.loc.stringCompanies">User Groups</h3>
            </div>*@
            <div class="row title-row">
                <div class="pull-right">
                    <button class="btn btn-success btn-sm" data-bind="click: newItem, visible: !isEditing()"><i class="fa fa-plus"></i></button>
                </div>
                <div class="pull-left">
                    <h3 data-bind="text: $root.loc.stringUserGroups">User Groups</h3>
                </div>
            </div>
            <!-- ko with: company -->
            <div>
                @{
                    @for (var i = 0; i <= 8; i++)
                    {
                        <div class="col-md-11 mt-4">
                            <div class="tile row" data-bind="click: $root.setSelectedItem, css: { selected: id() === $root.selectedItemId()}">
                                <!-- Standard update, edit and delete options -->
                                <div data-bind="compose: 'adminTileButtonPanel.html'"><div class="tile-button-panel" data-bind="if: $root.selectedItem() &amp;&amp; $data === $root.selectedItem()" data-view="views/adminTileButtonPanel" data-active-view="true" style=""></div></div>

                                <span class="title" data-bind="text: name">International Petroleum Consultants - Employees</span>

                                <div class="tile-confirmation make-danger" data-bind="visible: id() === $root.selectedItemId() &amp;&amp; $root.isDeleting()" style="display: none;">
                                    <i class="fa fa-trash-o fa-2x"></i>
                                    <span data-bind="text: $root.loc.textDeleteConfirmationMessage">Are you sure you want to delete this item?</span>
                                </div>

                                <div class="tile-body row" data-bind="visible: id() !== $root.selectedItemId() || !$root.isDeleting()">
                                    <div class="col-md-4">
                                        <span class="tile-label"><i class="fa fa-users"></i></span>
                                        <a data-bind="text: users().length">0</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>