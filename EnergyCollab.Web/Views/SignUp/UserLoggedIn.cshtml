@{
    ViewData["Title"] = "User Logged In";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    html, body {
        height: 100%;
        width: 100%;
    }
    body {
        background-color: #fbfbfb;
    }
    header {
        background-color: #fff;
        height: 4.5rem;
        border-bottom: 1px solid #E3E3E3;
        position: sticky;
        top: 0;
    }
    .logo img {
        height: 2.5rem;
        margin: 0.75rem 3rem;
    }
    #header {
        display: flex;
        flex-wrap: wrap;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
    }
    .pull-right {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .user-info a {
        color: #80bd01;
        text-decoration: none;
    }
        .user-info a:hover {
            color: #8ece01;
        }
    .user-info span {
        color: #5f5f5f;
    }
    .right-logo img {
        height: 2.5rem;
        margin: 0 6rem 0 0.50rem;
    }
    .contain-box {
        margin: 6rem 0;
    }
    .contain-box, .my-profile, .search-vacancies {
        text-align: center;
        background-color: #fff;
        border: 1px solid #E3E3E3;
        border-radius: 4px;
        height: 100%;
        padding: 4rem;
    }
    .my-profile, .search-vacancies {
        margin: 1rem;
    }
</style>
    <header>
        <nav>
            <div id="header">
                <div class="logo">
                    <img src="https://cdn.oildiversity.com/app/images/logo/logo-horizontal.svg" alt="logo">
                </div>
                <div class="pull-right">
                    <div class="user-info">
                        <a href="#">Back To Home</a>
                        <span>| Pankaj Arora</span>
                        <a href="#"><i class="icon icon-basic-lock"></i></a>
                    </div>
                    <div class="right-logo">
                        <img src="https://api.theenergycollab.com/api/storage/redirect?id=f17a8d77-5bbb-ea11-a2da-fc57d5303668" alt="right-logo">
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="contain-box col-md-12">
            <div class="my-profile col-md-12">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("CandidateDetailProfile", "CandidateProfile", new { id = "16" })'">My Profile </button>
            </div>
            <span class="col-md-12">Keep your CV updated so Employers can find you</span>
            <div class="search-vacancies col-md-12">
            <button class="btn btn-primary" onclick="location.href='@Url.Action("CompleteSearchVacancies", "JobSeeker")'">Search Vacancies </button>
@*            <input type="button" class="btn btn-lg btn-primary m-4 col-5" id="SearchVacancies" value="Search Vacancies" onclick="location.href='@Url.Action("CompleteSearchVacancies", "JobSeeker")'  />
*@
            </div>
            <span class="col-md-12">Search among thousands of available Vacancies</span>
        </div>
    </div>
  